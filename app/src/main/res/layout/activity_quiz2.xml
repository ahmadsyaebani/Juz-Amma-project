<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        tools:context="com.amikom.app.Quiz2Activity">

        <TextView
            android:id="@+id/textView"
            style="@style/Base.TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:text="TAJWID" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttonSelesai"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/buttonSelesai"
            android:layout_below="@+id/textView"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp"
            android:text="1. Huruf nun mati apabila bertemu dengan alif maka di sebut ....." />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/textView1"
            android:layout_alignLeft="@+id/textView1"
            android:layout_alignRight="@+id/textView1"
            android:layout_alignStart="@+id/textView1"
            android:layout_below="@+id/textView1">

            <RadioButton
                android:id="@+id/radioButtonA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/radioGroup1"
                android:layout_alignStart="@+id/radioGroup1"
                android:layout_below="@+id/radioGroup1"
                android:text="Idzhar Halqi" />

            <RadioButton
                android:id="@+id/radioButtonB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/radioGroup1"
                android:layout_alignStart="@+id/radioGroup1"
                android:layout_below="@+id/radioGroup1"
                android:text="Idgham bighunah" />

            <RadioButton
                android:id="@+id/radioButtonC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/radioGroup1"
                android:layout_alignStart="@+id/radioGroup1"
                android:layout_below="@+id/radioGroup1"
                android:text="Idghom Billaghunah" />

        </RadioGroup>


        <Button
            android:id="@+id/buttonSelesai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:text="Selesai" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/radioGroup1"
            android:layout_alignLeft="@+id/radioGroup1"
            android:layout_alignRight="@+id/radioGroup1"
            android:layout_alignStart="@+id/radioGroup1"
            android:layout_below="@+id/radioGroup1"
            android:text="2. Jika nun mati bertemu dengan huruf hijaiyah lam dan ra maka hukum bacaannya di sebut ....." />

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView2">

            <RadioButton
                android:id="@+id/radioButton2A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Idzhar Halqi" />

            <RadioButton
                android:id="@+id/radioButton2B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Idgham Billagunnah" />

            <RadioButton
                android:id="@+id/radioButton2C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Idgham Bighunah" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView2"
            android:layout_alignLeft="@+id/radioGroup2"
            android:layout_alignRight="@+id/textView2"
            android:layout_alignStart="@+id/radioGroup2"
            android:layout_below="@+id/radioGroup2"
            android:text="3. Apabila nun mati bertemu dengan kaf maka hukum bacaanya ....." />

        <RadioGroup
            android:id="@+id/radioGroup3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/textView3">

            <RadioButton
                android:id="@+id/radioButton3A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Idzhar halqi" />

            <RadioButton
                android:id="@+id/radioButton3B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Idgham billaghunah" />

            <RadioButton
                android:id="@+id/radioButton3C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Ikhfa'" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView3"
            android:layout_alignLeft="@+id/radioGroup3"
            android:layout_alignRight="@+id/textView3"
            android:layout_alignStart="@+id/radioGroup3"
            android:layout_below="@+id/radioGroup3"
            android:text="4. Apabila nun mati bertembu dengan ya maka hukum bacaanya adalah ....." />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/textView4">

            <RadioButton
                android:id="@+id/radioButton4A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Idgham bigunah" />

            <RadioButton
                android:id="@+id/radioButton4B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Idgham bilagunah" />

            <RadioButton
                android:id="@+id/radioButton4C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Ikhfa'" />
        </RadioGroup>

        <TextView
            android:id="@+id/textViewHasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/radioGroup"
            android:layout_alignStart="@+id/radioGroup"
            android:layout_below="@+id/radioGroup"
            android:text="Nilai Saya :" />


    </RelativeLayout>
</ScrollView>